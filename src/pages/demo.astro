---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CloudflareStreamPlayer from '../components/CloudflareStreamPlayer';
---

<Layout 
  title="Demo - AutiMind AI Platform"
  description="See AutiMind's AI platforms in action - live demonstrations of our enterprise AI solutions and software development capabilities."
>
  <Header />
  
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <div class="container mx-auto px-4 py-20">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-teal-400 to-orange-400 bg-clip-text text-transparent">
            Platform Demo
          </h1>
          <p class="text-xl text-gray-300 leading-relaxed">
            Experience our AI-powered platforms in action
          </p>
        </div>
        
        <div class="relative">
          <div class="bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-8 hover:border-teal-500/50 transition-all duration-300">
            <CloudflareStreamPlayer client:load />
          </div>
        </div>
        
        <div class="mt-12 text-center">
          <p class="text-gray-300 mb-6">
            Interested in learning more about our AI solutions?
          </p>
          <a href="/#contact" class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-teal-500 to-cyan-500 text-white rounded-full font-semibold text-lg hover:from-teal-600 hover:to-cyan-600 transition-all transform hover:-translate-y-1 hover:shadow-xl hover:shadow-teal-500/25">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>